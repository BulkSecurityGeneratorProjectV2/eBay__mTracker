		name="url" value="jdbc:mysql://d-shc-00436909.corp.ebay.com:3306/usagedb" 
		/> <property name="username" value="usagedb" /> <property name="password" 
		value="usagedb" /> </bean -->

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="oracle.jdbc.OracleDriver" />
		<property name="url"
			value="jdbc:oracle:thin:@unitdb.vip.qa.ebay.com:1521:UNITDB" />
		<property name="username" value="usagedb" />
		<property name="password" value="usagedb" />
	</bean>


	<bean id="UDCJDBCTemplate" class="com.ebay.build.udc.dao.UDCJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
		<property name="udcTable" value="usagedata" />
	</bean>
		
 	<bean id="UDCJDBCTemplate_paypal" class="com.ebay.build.udc.dao.UDCJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
		<property name="udcTable" value="usagedata4p" />
	</bean>

	<bean id="rideDao" class="com.ebay.build.udc.dao.UsageDataDaoJDBCImpl">
		<property name="udcJdbc" ref="UDCJDBCTemplate" />
	</bean>

	<bean id="paypalDao" class="com.ebay.build.udc.dao.UsageDataDaoJDBCImpl">
		<property name="udcJdbc" ref="UDCJDBCTemplate_paypal" />
	</bean>
	
	<!-- filter configuration -->
	<bean id="rideFilterFactory" class="com.ebay.build.profiler.filter.UDCFilterFactory">
		<property name="filterFile" value="/ride-filters.xml"/>
	</bean>
	
	<bean id="paypalFilterFactory" class="com.ebay.build.profiler.filter.UDCFilterFactory">
		<property name="filterFile" value="/paypal-filters.xml"/>
	</bean>
	
	<bean id="rideErrorClassifier" class="com.ebay.build.profiler.filter.ErrorClassifier" scope="prototype">
		<property name="factory" ref="rideFilterFactory"></property>
	</bean>
	<bean id="paypalErrorClassifier" class="com.ebay.build.profiler.filter.ErrorClassifier" scope="prototype">
		<property name="factory" ref="paypalFilterFactory"></property>
	</bean>
	
	<bean id="rideUsageDataRecorder" class="com.ebay.build.udc.UsageDataRecorder" scope="prototype">
		<property name="dao" ref="rideDao" />
		<property name="errorClassifier" ref="rideErrorClassifier"/>
	</bean>
	
	<bean id="paypalUsageDataRecorder" class="com.ebay.build.udc.UsageDataRecorder" scope="prototype">
		<property name="dao" ref="paypalDao" />
		<property name="errorClassifier" ref="paypalErrorClassifier"/>
	</bean>
	
	<bean id="rideUpdateJob" class="com.ebay.build.udc.UDCUpdateJob" scope="prototype">
		<property name="dao" ref="rideDao" />
		<property name="errorClassifier" ref="rideErrorClassifier"/>
	</bean>
	
	<bean id="paypalUpdateJob" class="com.ebay.build.udc.UDCUpdateJob" scope="prototype">
		<property name="dao" ref="paypalDao" />
		<property name="errorClassifier" ref="paypalErrorClassifier"/>
	</bean>
</beans>