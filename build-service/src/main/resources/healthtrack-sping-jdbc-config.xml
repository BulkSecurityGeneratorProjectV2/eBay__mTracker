<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    classpath:org/springframework/beans/factory/xml/spring-beans-3.0.xsd ">

    <bean id="dataSource" 
      class="org.springframework.jdbc.datasource.DriverManagerDataSource">
      <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
      <property name="url" value="jdbc:oracle:thin:@ppldb.vip.qa.ebay.com:1521:PPLDB"/>
      <property name="username" value="raptor_build_prod"/>
      <property name="password" value="raptor"/>
   </bean>
   
    <bean id="HealthTrackJDBCTemplate" 
      class="com.ebay.build.persistent.healthcheck.HealthTrackJDBCTemplate">
      <property name="dataSource"  ref="dataSource" />    
   </bean>

    <bean id="HealthTrackDetailsJDBCTemplate" 
      class="com.ebay.build.persistent.healthcheck.HealthTrackDetailsJDBCTemplate">
      <property name="dataSource"  ref="dataSource" />    
   </bean>
      
    <bean id="ConfigurationJDBCTemplate" 
      class="com.ebay.build.service.config.ConfigurationJDBCTemplate">
      <property name="dataSource"  ref="dataSource" />    
   </bean>
</beans>