<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
 <head>
  <title> New Document </title>
  <meta name="Generator" content="EditPlus">
  <meta name="Author" content="">
  <meta name="Keywords" content="">
  <meta name="Description" content="">
  <style type="text/css">
  
  table
	{
		border-collapse:collapse;
		border:1px solid black;
	}
	
  	table th,table td
	{
		
		padding-left:5px;
		padding-right:5px;
		text-align:left;
		border:1px solid black;
		
	}
	table tr
	{
		border:none;
	} 
	
	.textleft{
		text-align:left;
	}
	
	.textcenter{
		text-align:center;
	}
	
	.textright{
		text-align:right;
	}
	
	#statistb
	{
		border:1px solid black;
	}
	
	#statistb td
	{
		border:1px solid black;
		padding-top:5px;
		padding-bottom:4px;
		padding-left:10px;
	}
		

  </style>
 </head>

 <body>
	<div style="text-align:center;">
		<h1>Test Result</h1>
		<table id="statistb" style="border-collapse:collapse;">
			<tbody>
				<tr style="background-color:#DFEFCF;">
					<td class="textcenter" style="width:250px;">Collection</td>
					<td class="textcenter" style="width:250px;">Field</td>					
					<td class="textcenter" style="width:250px;">Current value</td>
					<td class="textcenter" style="width:250px;">Threshold</td>

				</tr>
		
			#foreach($singleResult in ${resultlist})
				<tr style="color:$singleResult.getColor();">
					<td class="textleft" style="width:300px;">$singleResult.getCollection()</td>
					<td class="textleft" style="width:300px;">$singleResult.getField()</td>
					<td class="textright" style="width:300px;">$singleResult.getNowValue()</td>
					<td class="textright" style="width:300px;">$singleResult.getOperator() $singleResult.getThreshold()</td>

				</tr>
			#end 
			</tbody>
		</table>
	</div>

 </body>
</html>
