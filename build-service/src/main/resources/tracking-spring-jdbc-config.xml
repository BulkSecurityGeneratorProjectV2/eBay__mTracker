<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    classpath:org/springframework/beans/factory/xml/spring-beans-3.0.xsd ">

    <bean id="dataSource" 
      class="org.springframework.jdbc.datasource.DriverManagerDataSource">
      <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
      <property name="url" value="jdbc:oracle:thin:@xxxxxx:1521:PPLDB"/>
      <property name="username" value=""/>
      <property name="password" value=""/>
   </bean>

    <bean id="sessionJDBCTemplate"
          class="com.ccoe.build.tracking.jdbc.SessionJDBCTemplate">
        <property name="dataSource"  ref="dataSource" />
    </bean>

    <bean id="rawDataJDBCTemplate"
          class="com.ccoe.build.tracking.jdbc.RawDataJDBCTemplate">
        <property name="dataSource"  ref="dataSource" />
    </bean>
</beans>