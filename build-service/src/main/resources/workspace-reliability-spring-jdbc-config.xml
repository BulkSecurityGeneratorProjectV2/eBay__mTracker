<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    classpath:org/springframework/beans/factory/xml/spring-beans-3.0.xsd ">

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url"
			value="jdbc:mysql://crp-wideweb-001.corp.ebay.com:3306/themis" />
		<property name="username" value="tableau" />
		<property name="password" value="tableau" />
	</bean>

	<bean id="WorkSpaceEmailJDBCTemplate" class="com.ebay.build.workspace.WorkSpaceReliabilityJDBC">
		<property name="dataSource" ref="dataSource" />
	</bean>
</beans>